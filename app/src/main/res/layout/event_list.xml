<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.cardview.widget.CardView
        android:layout_marginLeft="@dimen/margin_16"
        android:layout_marginRight="@dimen/margin_16"
        android:layout_marginTop="@dimen/margin_16"
        android:layout_width="match_parent"
        android:layout_height="@dimen/item_event_cardview_height">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="@dimen/linear_color_line"
            android:layout_height="90dp">
            <ImageView
                android:id="@+id/ivTint"
                android:layout_width="@dimen/linear_color_line"
                android:layout_height="@dimen/item_event_cardview_height"
                android:src="@color/orange"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:paddingRight="@dimen/pading_10"
            android:layout_gravity="center_vertical"
            android:layout_height="wrap_content">
            <LinearLayout
                    android:layout_width="80dp"
                    android:gravity="center"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                <TextView
                        android:id="@+id/tvEventDate"
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:fontFamily="@font/poppins_regular"
                        android:text="08"
                        android:textColor="@color/black"
                        android:textSize="@dimen/date_size" />
                    <TextView
                    android:id="@+id/tvEventDay"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Thu"
                    android:fontFamily="@font/poppins_light"
                    android:textSize="@dimen/edit_text_size"
                    android:textColor="@color/black" />
                </LinearLayout>
                <View
                    android:layout_width="1dp"
                    android:background="@color/black"
                    android:layout_gravity="center_vertical"
                    android:layout_height="60dp"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center"
                android:layout_marginLeft="30dp">
                <TextView
                    android:id="@+id/tvEventName"
                    android:layout_width="170dp"
                    android:layout_height="wrap_content"
                    android:text="event name"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:fontFamily="@font/poppins_regular"
                    android:textSize="@dimen/edit_text_size"
                    android:textColor="@color/black" />
                <TextView
                    android:id="@+id/tvDes"
                    android:layout_width="170dp"
                    android:layout_height="wrap_content"
                    android:text="event Description "
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:fontFamily="@font/poppins_light"
                    android:textSize="15sp"
                    android:textColor="@color/black" />
                 </LinearLayout>
            <TextView
                android:id="@+id/tvSDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="2:00 A.M."
                android:layout_gravity="center"
                android:gravity="right"
                android:layout_marginTop="3dp"
                android:layout_centerVertical="true"
                android:fontFamily="@font/poppins_regular"
                android:textSize="@dimen/edit_text_size"
                android:textColor="@color/black"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>